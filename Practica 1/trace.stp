#!/ust/bin/stap


global date_output
probe syscall.read {
    if (pid() == $1 || pid() == $2) {
        system("sleep 0.1");
        system(sprintf("printf \"Proceso %d: %s (\" && date +\"%%Y-%%m-%%d %%H:%%M:%%S\" && printf \")\\n\"", pid(), "read"))
        system("sleep 0.1");
    }
}

